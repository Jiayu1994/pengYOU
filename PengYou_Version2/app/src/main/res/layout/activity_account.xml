<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.jiayu.pengyou_version2.AccountActivity">


    <include
        android:id="@+id/view_app_bar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1" />

    <Button
        android:id="@+id/changepw_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_app_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:backgroundTint="@android:color/background_light"
        android:text="Change Password"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changepw_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:backgroundTint="@android:color/background_light"
        android:onClick="deactivate"
        android:text="Deactivate Account"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/email_verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/changepw_btn"
        android:layout_below="@+id/button3"
        android:layout_marginTop="44dp"
        android:backgroundTint="@android:color/background_light"
        android:text="Email Verifcation"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textViewUserEmailVerified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_verify_btn"
        android:layout_below="@+id/email_verify_btn"
        android:text="TextView"
        android:textSize="14sp" />
</RelativeLayout>
