<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/event_single_specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/event_single_numParticipant"
        android:text="Specific Event" />

    <TextView
        android:id="@+id/event_single_numParticipant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_single_title"
        android:layout_below="@+id/event_single_title"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Number of participant" />

    <TextView
        android:id="@+id/event_single_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Event Title"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/event_single_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_single_title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:text="time" />
</RelativeLayout>